#!/bin/bash
### _================
### ~/.bash_env
### _================

### Editor
alias nano='nano -m -u -c -W --tabsize=4 --fill=100 --autoindent'
export EDITOR=nano
export VISUAL=nano

### __Sensitive Info
### _================

### General
export ADMIN='' ### admin username
export DRIVE_FS='ext4' ### drive file system
export DESKTOP_SERVICE='' ### desktop service name
export USE_BS_PROMPT=0 ### use ultimate command prompt
### Paths
export DOWNLOAD_PATH='/home/Downloads'
export GITHUB="/home/$ADMIN/Documents/Github" ### git repos
export DOCKER_COMPOSE_PATH="/home/$ADMIN/Documents/Docker/Compose" ### <path>/docker-compose.yaml
export QUARANTINE="/home/$ADMIN/QUARANTINE" ### antivirus QUARANTINE
export YT_PATH='/mnt/<your drive>/Media/Youtube' ### `yt-dlp` library path